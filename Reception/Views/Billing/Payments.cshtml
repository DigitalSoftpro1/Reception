@model List<Reception.Models.Payment>

@{
    ViewData["Title"] = "Payments - " + ViewBag.TreatmentName;
    bool canEdit = ViewBag.CanEditPayment != null && (bool)ViewBag.CanEditPayment;
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<link rel="stylesheet" href="~/css/Print.css" />
<div class="container-fluid mt-4" id="showprint">
    <div class="row">
        <div class="col-12">

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="mb-0">
                    <i class="bi bi-receipt"></i> Payment Details - @ViewBag.TreatmentName
                </h3>
                <button onclick="window.history.back()" class="btn btn-secondary">
                    <i class="bi bi-arrow-left "></i> Back
                </button>
            </div>

            <div class="row">

                <!-- Invoice Summary -->
                <div class="col-md-6">
                    <div class="card mb-4" id="printableInvoice">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Invoice Summary</h5>
                            <button type="button" onclick="printInvoiceTable()" class="btn btn-primary">
                                🖨 Print Table
                            </button>
                        </div>

                        <div class="card-body">
                            <input type="hidden" id="invoiceId" value="@ViewBag.InvoiceId" />
                            <input type="hidden" id="visitId" value="@ViewBag.VisitId" />
                            <input type="hidden" id="treatmentId" value="@ViewBag.TreatmentId" />
                            <input type="hidden" id="invoiceTotal" value="@ViewBag.InvoiceTotal" />

                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Invoice Total:</strong></td>
                                    <td class="text-end">@ViewBag.InvoiceTotal JOD</td>
                                </tr>

                                <tr>
                                    <td><strong>Discount:</strong></td>
                                    <td class="text-end">
                                        @if (canEdit)
                                        {
                                            <input type="number"
                                                   id="discount"
                                                   class="form-control text-end"
                                                   value="@ViewBag.Discount"
                                                   step="0.001"
                                                   min="0"
                                                   onchange="calculateRemaining()"
                                                   style="max-width: 200px; display: inline-block;" />
                                            <span>JOD</span>
                                        }
                                        else
                                        {
                                            <strong>@ViewBag.Discount JOD</strong>
                                        }
                                    </td>
                                </tr>

                                <tr class="table-active">
                                    <td><strong>Amount To Pay:</strong></td>
                                    <td class="text-end">
                                        <strong id="amountToPay">@ViewBag.AmountToPay JOD</strong>
                                    </td>
                                </tr>

                                <tr class="table-success">
                                    <td><strong>Total Paid:</strong></td>
                                    <td class="text-end text-success">
                                        <strong id="totalPaid">@ViewBag.TotalPaid JOD</strong>
                                    </td>
                                </tr>

                                <tr class="table-danger">
                                    <td><strong>Remaining:</strong></td>
                                    <td class="text-end text-danger">
                                        <strong id="remaining">@ViewBag.Remain JOD</strong>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Add Payment -->
                @if (canEdit)
                {
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-header bg-success text-white">
                                <h5 class="mb-0">
                                    <i class="bi bi-plus-circle"></i> Add New Payment
                                </h5>
                            </div>

                            <div class="card-body">
                                <form asp-action="AddPayment" method="post">
                                    <input type="hidden" name="IdInvoice" value="@ViewBag.InvoiceId" />
                                    <input type="hidden" id="discountValue" name="Discount" value="@ViewBag.Discount" />

                                    <div class="mb-3">
                                        <label class="form-label">Payment Type</label>
                                        <select name="PaidType" class="form-select" required>
                                            <option value="">-- Select Type --</option>
                                            <option value="Cash">Cash</option>
                                            <option value="Credit Card">Credit Card</option>
                                            <option value="Bank Transfer">Bank Transfer</option>
                                            <option value="Check">Check</option>
                                        </select>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Payment Amount</label>
                                        <input type="number"
                                               name="PaidValue"
                                               class="form-control"
                                               step="0.001"
                                               required />
                                        <small class="text-muted">
                                            Remaining: <span id="remainingSmall">@ViewBag.Remain</span> JOD
                                        </small>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Payment Date</label>
                                        <input type="datetime-local"
                                               name="PaidDate"
                                               class="form-control"
                                               value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")"
                                               required />
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-success">
                                            <i class="bi bi-check-circle"></i> Record Payment
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Payment History -->
            <div class="card mt-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Payment History</h5>
                </div>

                <div class="card-body">
                    @if (Model != null && Model.Count > 0)
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr>
                                        <td>@p.PaidDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td><span class="badge bg-secondary">@p.PaidType</span></td>
                                        <td class="text-success">
                                            <strong>@((p.PaidValue ?? 0).ToString("0.000")) JOD</strong>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            No payments recorded yet
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

 <div id="printableTable" style="display:none;">
    <!-- Header للطباعة -->
    <div class="print-header"  >
        <div class="clinic-info">
             <div>
                <h2>Harmony Medical Clinic</h2>
                <p>Amman - Jordan</p>
                <p>Tel: 0790000000</p>
            </div>
        </div>

        <hr />

        <div class="invoice-meta">
            <div><strong>Treatment:</strong> @ViewBag.TreatmentName</div>
            <div><strong>Date:</strong> @DateTime.Now.ToString("dd/MM/yyyy")</div>
        </div>
    </div>

     <table border="1" cellspacing="0" cellpadding="5" style="width:100%;">
        <thead>
            <tr>
                <th>Invoice Total</th>
                <th>Discount</th>
                <th>Amount To Pay</th>
                <th>Total Paid</th>
                <th>Remaining</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><span id="printInvoiceTotal">@ViewBag.InvoiceTotal</span> JOD</td>
                <td><span id="printDiscount">@ViewBag.Discount</span> JOD</td>
                <td><span id="printAmountToPay">@ViewBag.AmountToPay</span> JOD</td>
                <td><span id="printTotalPaid">@ViewBag.TotalPaid</span> JOD</td>
                <td><span id="printRemaining">@ViewBag.Remain</span> JOD</td>
            </tr>
        </tbody>
    </table>
     <!-- Footer للطباعة -->
    <div class="print-footer">
        <hr />
        <p>Thank you for choosing Harmony Medical Clinic</p>
        <p class="signature">Signature: ______________________</p>
    </div>

</div>


<script>
    function calculateRemaining() {
        const invoiceTotal = parseFloat(document.getElementById('invoiceTotal').value) || 0;
        const discount = parseFloat(document.getElementById('discount').value) || 0;
        const totalPaid = parseFloat(document.getElementById('totalPaid').textContent) || 0;

        const amountToPay = invoiceTotal - discount;
        const remaining = amountToPay - totalPaid;

        document.getElementById('amountToPay').textContent = amountToPay.toFixed(3) + ' JOD';
        document.getElementById('remaining').textContent = remaining.toFixed(3) + ' JOD';
        document.getElementById('discountValue').value = discount.toFixed(3);
        document.getElementById('remainingSmall').textContent = remaining.toFixed(3);
    }

    function printInvoiceTable() {
         document.getElementById('showprint').style.display = 'none';

         const headers = document.getElementsByClassName('header');
        for (let i = 0; i < headers.length; i++) {
            headers[i].style.display = 'none';
        }

         document.getElementById('printableTable').style.display = 'block';

        window.print();

         for (let i = 0; i < headers.length; i++) {
            headers[i].style.display = 'block';
        }

         document.getElementById('showprint').style.display = 'block';
        document.getElementById('printableTable').style.display = 'none';
    }


</script>
@if (TempData["PaymentError"] != null)
{
    <script>
        Swal.fire({
            icon: 'error',
            title: 'خطأ في الدفع',
            text: 'ا يمكن إدخال دفعة أكبر من المتبقي',
            confirmButtonText: 'حسناً'
        });
    </script>
}
